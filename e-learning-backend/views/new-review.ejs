<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Thêm Đánh giá</title>
    <style>
      body {
        font-family: sans-serif;
        margin: 40px;
      }
      .form-container {
        padding: 20px;
        border: 1px solid #ccc;
      }
      .form-group {
        margin-bottom: 15px;
      }
      label {
        display: block;
        margin-bottom: 5px;
      }
      input,
      select,
      textarea {
        width: 100%;
        padding: 8px;
      }
    </style>
  </head>
  <body>
    <h1>Thêm Đánh giá mới</h1>
    <div class="form-container">
      <form action="/admin/reviews/new" method="POST">
        <div class="form-group">
          <label for="user">Người đánh giá:</label>
          <select id="user" name="user">
            <% users.forEach(user => { %>
            <option value="<%= user._id %>"><%= user.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="course">Khóa học:</label>
          <select id="course" name="course">
            <% courses.forEach(course => { %>
            <option value="<%= course._id %>"><%= course.title %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="rating">Điểm (1-5):</label>
          <input
            type="number"
            id="rating"
            name="rating"
            min="1"
            max="5"
            required
          />
        </div>
        <div class="form-group">
          <label for="comment">Bình luận:</label>
          <textarea id="comment" name="comment" rows="3" required></textarea>
        </div>
        <button type="submit">Tạo Đánh giá</button>
      </form>
    </div>
  </body>
</html>
