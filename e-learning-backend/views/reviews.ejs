<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin - Quản lý Đánh giá</title>
    <style>
      body {
        font-family: sans-serif;
        margin: 40px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
      }
      th {
        background-color: #f2f2f2;
      }
      nav a {
        margin-right: 15px;
        text-decoration: none;
        color: blue;
        padding-bottom: 5px;
      }
      nav a.active {
        border-bottom: 2px solid blue;
      }
    </style>
  </head>
  <body>
    <nav>
      <a href="/admin/courses">Khóa học</a>
      <a href="/admin/categories">Danh mục</a>
      <a href="/admin/users">Người dùng</a>
      <a href="/admin/enrollments">Ghi danh</a>
      <a href="/admin/reviews" class="active">Đánh giá</a>
      <a href="/admin/projects">Dự án</a>
      <a href="/admin/questions">Hỏi & Đáp</a>
    </nav>

    <h1>Danh sách Đánh giá</h1>
    <a
      href="/admin/reviews/new"
      style="
        display: inline-block;
        margin-bottom: 20px;
        padding: 10px;
        background-color: green;
        color: white;
        text-decoration: none;
      "
      >+ Thêm đánh giá mới</a
    >
    <table>
      <thead>
        <tr>
          <th>Người đánh giá</th>
          <th>Khóa học</th>
          <th>Điểm</th>
          <th>Bình luận</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% reviews.forEach(review => { %>
        <tr>
          <td><%= review.user ? review.user.name : 'N/A' %></td>
          <td><%= review.course ? review.course.title : 'N/A' %></td>
          <td><%= review.rating %> ★</td>
          <td><%= review.comment %></td>
          <td>
            <a href="/admin/reviews/<%= review._id %>/edit">Sửa</a> |
            <a
              href="/admin/reviews/<%= review._id %>/delete"
              onclick="return confirm('Bạn chắc chắn muốn xóa?')"
              >Xóa</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
